{
  "appId": "com.ytdownloader.app",
  "productName": "YouTube Downloader Pro",
  "copyright": "Copyright Â© 2024",
  "directories": {
    "output": "dist-electron",
    "buildResources": "build-resources"
  },
  "files": [
    "client/dist/**/*",
    "backend/**/*",
    "!backend/node_modules",
    "!backend/downloads",
    "!backend/package-lock.json",
    "src/electron/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "binaries",
      "to": "binaries",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build-resources/icon.ico",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "requestedExecutionLevel": "asInvoker"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "YouTube Downloader Pro",
    "installerIcon": "build-resources/installer-icon.ico",
    "uninstallerIcon": "build-resources/uninstaller-icon.ico",
    "installerHeader": "build-resources/installer-header.bmp",
    "installerSidebar": "build-resources/installer-sidebar.bmp",
    "license": "LICENSE",
    "perMachine": false,
    "runAfterFinish": true
  },
  "publish": {
    "provider": "github",
    "owner": "yourusername",
    "repo": "yt-downloader"
  },
  "mac": {
    "target": ["dmg"],
    "icon": "build-resources/icon.icns",
    "category": "public.app-category.utilities"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "build-resources/icon.png",
    "category": "Utility"
  }
}
