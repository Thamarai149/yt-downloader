{
    "name": "yt-downloader-server",
    "version": "2.0.0",
    "description": "Modern YouTube downloader server with real-time progress tracking",
    "main": "server.js",
    "type": "module",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint . --ext .js,.mjs",
        "lint:fix": "eslint . --ext .js,.mjs --fix",
        "format": "prettier --write .",
        "health": "node --version && npm --version",
        "clean": "rm -rf node_modules package-lock.json && npm install"
    },
    "keywords": [
        "youtube",
        "downloader",
        "video",
        "audio",
        "express",
        "socket.io",
        "real-time"
    ],
    "author": "Your Name",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/yt-downloader.git"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.21.1",
        "express-rate-limit": "^7.4.1",
        "helmet": "^8.0.0",
        "compression": "^1.7.4",
        "morgan": "^1.10.0",
        "sanitize-filename": "^1.6.3",
        "youtube-dl-exec": "^2.4.13",
        "socket.io": "^4.8.1",
        "uuid": "^10.0.0",
        "joi": "^17.13.3",
        "dotenv": "^16.4.7"
    },
    "devDependencies": {
        "nodemon": "^3.1.10",
        "jest": "^29.7.0",
        "supertest": "^7.0.0",
        "eslint": "^9.15.0",
        "prettier": "^3.3.3",
        "@types/jest": "^29.5.14"
    },
    "nodemonConfig": {
        "watch": ["*.js", "routes/**/*.js", "middleware/**/*.js"],
        "ext": "js,json",
        "ignore": ["node_modules/", "downloads/", "*.test.js"],
        "delay": "1000"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverage": true,
        "coverageDirectory": "coverage",
        "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"]
    }
}